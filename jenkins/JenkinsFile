pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Realiza o checkout de um branch específico
                git branch: 'dev', url: 'https://github.com/rmohandasrodrigues/clientes.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Atualiza os pacotes e instala o Python3
                sh 'apt-get update && apt-get install -y python3'
            }
        }

        // Outros estágios...
    }

    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }
        failure {
            echo 'Pipeline falhou!'
        }
    }
}
