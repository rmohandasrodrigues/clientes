pipeline {
    agent any

    environment {
        // Define o caminho para o Python, se necessário
        PYTHON_ENV = "/path/to/python"
    }

    stages {
        stage('Checkout') {
            steps {
                // Faça o checkout do repositório contendo os scripts Python
                git 'https://github.com/rmohandasrodrigues/clientes.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Instale as dependências necessárias (se houver um requirements.txt)
                sh '${PYTHON_ENV} -m pip install -r requirements.txt'
            }
        }

        stage('Run Extraction Script') {
            steps {
                // Execute o script de extração
                sh '${PYTHON_ENV} extracao.py'
            }
        }

        stage('Send to Kafka') {
            steps {
                // Execute o script que envia para o Apache Kafka
                sh '${PYTHON_ENV} kafka_producer.py'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }
        failure {
            echo 'Pipeline falhou!'
        }
    }
}
