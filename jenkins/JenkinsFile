pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Realiza o checkout do repositório contendo os scripts Python
                git 'https://github.com/rmohandasrodrigues/clientes.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Atualiza os pacotes e instala o Python3
                sh 'apt-get update && apt-get install -y python3'
            }
        }

        stage('Install Python Packages') {
            steps {
                // Instala as dependências do Python a partir de requirements.txt, se necessário
                //sh 'python3 -m pip install -r requirements.txt'
            }
        }

        stage('Run Extraction Script') {
            steps {
                // Executa o script de extração
                //sh 'python3 extracao.py'
            }
        }

        stage('Send to Kafka') {
            steps {
                // Executa o script que envia para o Apache Kafka
                //sh 'python3 kafka_producer.py'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }
        failure {
            echo 'Pipeline falhou!'
        }
    }
}

